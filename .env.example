# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/health-vault
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Encryption
ENCRYPTION_KEY=your-256-bit-encryption-key-here
ENCRYPTION_IV=your-initialization-vector-here

# Blockchain (Ethereum)
BLOCKCHAIN_NETWORK=sepolia
BLOCKCHAIN_PRIVATE_KEY=your-blockchain-private-key
INFURA_PROJECT_ID=your-infura-project-id

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,dcm,dicom

# External APIs
FHIR_SERVER_URL=https://hapi.fhir.org/baseR4
AI_ANALYTICS_API_KEY=your-ai-api-key

# Security
RATE_LIMIT_WINDOW=15min
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-key

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years as per healthcare regulations